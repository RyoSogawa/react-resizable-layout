{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "pretty": true,
    "newLine": "lf",
    "outDir": "lib/esm",
    "allowJs": true,
    "rootDir": "src",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node"
  },
  "exclude": [
    "src/stories"
  ],
  "include": ["src/**/*"]
}
